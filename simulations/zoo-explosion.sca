;;; test randomness of trans

;; blank -> 0.5 red, 1.0 blank-two (to fill in)
;; red -> blank
;; blue -> blank

(title "zoo explosion")

(description "every two generations, spatters the world with random animals.")

(states '((empty-a . " ")
	  (empty-b . " ")
	  (h . "🐹")
	  (k . "🐨")	  
	  (m . "🐵")
	  (p . "🐼")
	  (t . "🐯")))

;;; the world starts out empty

(world :dimensions '(10 10))

;;; all non-empty states become empty in the next generation
(trans 'empty-b #'turns-into 'empty-a)
(trans 'h #'turns-into 'empty-a)
(trans 'k #'turns-into 'empty-a)
(trans 'm #'turns-into 'empty-a)
(trans 'p #'turns-into 'empty-a)
(trans 't #'turns-into 'empty-a)

;;; the empty state randomly changes into animals
(trans 'empty-a #'(* 0.1 (turns-into)) 'h)
(trans 'empty-a #'(* 0.1 (turns-into)) 'k)
(trans 'empty-a #'(* 0.1 (turns-into)) 'm)
(trans 'empty-a #'(* 0.1 (turns-into)) 'p)
(trans 'empty-a #'(* 0.1 (turns-into)) 't)
(trans 'empty-a #'turns-into 'empty-b)

 
